# gruvboxy
[global]
	monitor = 0
	follow = keyboard
	# these should be in sync with dwm gaps
	origin = top-center
	offset = 860x30
	width = 250
	height = 150
	indicate_hidden = true
	transparency = 0
	separator_height = 2
	padding = 5
	horizontal_padding = 8
	frame_width = 2
	# Define a color for the separator.
	# possible values are:
	#  * auto: dunst tries to find a color fitting to the background;
	#  * foreground: use the same color as the foreground;
	#  * frame: use the same color as the frame;
	#  * anything else will be interpreted as a X color.
	separator_color = auto
	# Sort messages by urgency.
	sort = true
	font = CaskaydiaCove Nerd Font 11
	line_height = 0
	markup = full
	# The format of the message.  Possible variables are:
	#   %a  appname
	#   %s  summary
	#   %b  body
	#   %i  iconname (including its path)
	#   %I  iconname (without its path)
	#   %p  progress value if set ([  0%] to [100%]) or nothing
	#   %n  progress value if set without any extra characters
	#   %%  Literal %
	# Markup is allowed
	format = "<span color='#a89984'><b>%s</b></span>\n%b\n\n%p"
	show_age_threshold = 60
	ellipsize = middle
	ignore_newline = false
	stack_duplicates = true
	hide_duplicate_count = false
	show_indicators = false
	icon_position = left
	#icon_path = /usr/share/icons/Gruvbox-Plus-Dark/16x16/status:/usr/share/icons/Gruvbox-Plus-Dark/16x16/devices:/usr/share/icons/Gruvbox-Plus-Dark/symbolic/status:/usr/share/icons/Gruvbox-Plus-Dark/symbolic/devices:/usr/share/icons/Gruvbox-Plus-Dark/16x16/apps:/usr/share/icons/Gruvbox-Plus-Dark/16x16/panel
	min_icon_size = 16
	max_icon_size = 75
	enable_recursive_icon_lookup=true
	sticky_history = true
	history_length = 20
	dmenu = /usr/local/bin/rofi -p dunst:
	browser = /usr/bin/firefox
	# Always run rule-defined scripts, even if the notification is suppressed
	always_run_script = true
	title = Dunst
	class = Dunst
	corner_radius = 0
	progress_bar_corner_radius = 0
	force_xinerama = false
  	alignment = left
[urgency_low]
	background = "#282828"
	foreground = "#ebdbb2"
	frame_color= "#655c54"
	timeout = 4
[urgency_normal]
	background = "#282828"
	foreground = "#ebdbb2"
	frame_color = "#ebdbb2"
	timeout = 10
[urgency_critical]
	background = "#282828"
	foreground = "#ebdbb2"
	frame_color= "#fb4934"
	timeout = 0
